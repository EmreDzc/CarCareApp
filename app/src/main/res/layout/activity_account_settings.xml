<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Geri" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Profil Bilgileri"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </RelativeLayout>

        <!-- Profil Bilgileri Kartı -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil Bilgileri"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- İsim -->
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Na"
                    android:background="@drawable/rounded_edittext_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="16sp" />

                <!-- Soyisim -->
                <EditText
                    android:id="@+id/edit_surname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Soyisim"
                    android:background="@drawable/rounded_edittext_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="16sp" />

                <!-- Profil Güncelle Butonu -->
                <Button
                    android:id="@+id/btn_save_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="PROFİLİ GÜNCELLE"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/blue_button_bg"
                    android:paddingHorizontal="24dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Şifre Değiştirme Kartı -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Şifre Değiştir"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Mevcut Şifre -->
                <EditText
                    android:id="@+id/edit_current_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Mevcut Şifre"
                    android:background="@drawable/rounded_edittext_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:inputType="textPassword"
                    android:textSize="16sp" />

                <!-- Yeni Şifre -->
                <EditText
                    android:id="@+id/edit_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Yeni Şifre"
                    android:background="@drawable/rounded_edittext_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:inputType="textPassword"
                    android:textSize="16sp" />

                <!-- Yeni Şifre Tekrar -->
                <EditText
                    android:id="@+id/edit_confirm_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Yeni Şifre Tekrar"
                    android:background="@drawable/rounded_edittext_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:inputType="textPassword"
                    android:textSize="16sp" />

                <!-- Şifre Değiştir Butonu -->
                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ŞİFREYİ DEĞİŞTİR"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/green_button_bg"
                    android:paddingHorizontal="24dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hesabı Sil Kartı -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hesabı Sil"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Uyarı: Hesabınızı silmek tüm verilerinizi kalıcı olarak kaldıracaktır."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />


                <!-- Hesabı Sil Butonu -->
                <Button
                    android:id="@+id/btn_delete_account"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="HESABI SİL"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/red_button_bg"
                    android:paddingHorizontal="24dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
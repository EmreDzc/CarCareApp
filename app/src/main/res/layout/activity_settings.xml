<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayout_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1. Edit Profile Bölümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/img_edit_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Edit Profile Icon" />
                <TextView
                    android:id="@+id/txt_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. Vehicle Appointment & Insurance Bölümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_vehicle_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Next Vehicle Maintenance Appointment -->
                <TextView
                    android:id="@+id/txt_next_maintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Vehicle Maintenance Appointment" />
                <EditText
                    android:id="@+id/edit_next_maintenance_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="gg.aa.yyyy"
                    android:inputType="datetime" />

                <!-- Traffic Insurance Expiry Date -->
                <TextView
                    android:id="@+id/txt_traffic_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Traffic Insurance Expiry Date" />
                <EditText
                    android:id="@+id/edit_traffic_insurance_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="gg.aa.yyyy"
                    android:inputType="datetime" />

                <!-- Car Insurance Expiry Date -->
                <TextView
                    android:id="@+id/txt_car_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Car Insurance Expiry Date" />
                <EditText
                    android:id="@+id/edit_car_insurance_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="gg.aa.yyyy"
                    android:inputType="datetime" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/btn_save_vehicle_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3. Profile Picture Bölümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/img_profile_picture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:contentDescription="Profile Picture"/>
                <TextView
                    android:id="@+id/txt_upload_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Picture"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4. Dark Mode Toggle Bölümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txt_dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark Mode" />
                <Switch
                    android:id="@+id/switch_dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:checked="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 5. FAQ Bölümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- FAQ arama alanı -->
                <EditText
                    android:id="@+id/edit_search_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search FAQ"/>
                <!-- Soru ve cevaplar -->
                <TextView
                    android:id="@+id/txt_faq_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How do I update my profile?"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/txt_faq_profile_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can update your profile by going to the 'Edit Profile' section in the settings menu."/>
                <TextView
                    android:id="@+id/txt_faq_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How can I change my password?"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/txt_faq_password_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To change your password, go to the 'Security' section in your account settings."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 6. Rate the App Bölümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_rate_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate the App" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_rate_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate on Play Store" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 7. Log Out Bölümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out" />
                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:layout_gravity="end"
                    android:layout_marginStart="16dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 8. Delete Account Bölümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/txt_delete_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warning: Deleting your account will permanently remove all your data."/>
                <EditText
                    android:id="@+id/edit_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:layout_marginTop="8dp"/>
                <Button
                    android:id="@+id/btn_delete_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

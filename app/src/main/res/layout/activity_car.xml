<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Üst AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_car"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Dashboard"
        app:titleTextAppearance="@style/ToolbarTitleBold"
        app:titleTextColor="@android:color/white"
        app:titleCentered="true" />

    <!-- İçerikler Kaydırılabilir Bölüm -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- My Car Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="#018786"
                app:useCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvMyCarLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Car"
                        app:titleTextAppearance="@style/ToolbarTitleBold"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgCarIcon"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/car_icon"
                        android:contentDescription="Araba İkonu" />

                    <TextView
                        android:id="@+id/tvCarName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car Name"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Vehicle Information Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="#018786"
                app:useCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Information"
                        app:titleTextAppearance="@style/ToolbarTitleBold"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingBottom="8dp" />

                    <!-- 1. Satır: Kilometer | Fuel | Engine Temp -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Kilometer Kart -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#018786"
                            app:useCompatPadding="true">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kilometer"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvKilometerValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12500 km"
                                    android:textSize="18sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Fuel Kart -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#018786"
                            app:useCompatPadding="true">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fuel"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvFuelValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="75 %"
                                    android:textSize="18sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Engine Temp Kart -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#018786"
                            app:useCompatPadding="true">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Engine Temp"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvEngineTempValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90 °C"
                                    android:textSize="18sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- 2. Satır: Tire Pressure | Oil Level -->
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Tire Pressure Kart -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="140dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#018786"
                            app:useCompatPadding="true">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tire Pressure"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                                <!-- FL & FR -->
                                <LinearLayout
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="FL"
                                            android:textSize="10sp" />
                                        <TextView
                                            android:id="@+id/tvTPFL"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="32 PSI"
                                            android:textSize="12sp"
                                            android:layout_marginTop="2dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="FR"
                                            android:textSize="10sp" />
                                        <TextView
                                            android:id="@+id/tvTPFR"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="31 PSI"
                                            android:textSize="12sp"
                                            android:layout_marginTop="2dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <!-- RL & RR -->
                                <LinearLayout
                                    android:layout_marginTop="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="RL"
                                            android:textSize="10sp" />
                                        <TextView
                                            android:id="@+id/tvTPRL"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="30 PSI"
                                            android:textSize="12sp"
                                            android:layout_marginTop="2dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="RR"
                                            android:textSize="10sp" />
                                        <TextView
                                            android:id="@+id/tvTPRR"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="29 PSI"
                                            android:textSize="12sp"
                                            android:layout_marginTop="2dp" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Oil Level Kart -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="140dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#018786"
                            app:useCompatPadding="true">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Oil Level"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvOilLevelValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5 %"
                                    android:textSize="18sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hızlı Linkler Butonları -->
            <Button
                android:id="@+id/btnOpenSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule Maintenance"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/btnTrafficFineInquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traffic Fine Inquiry"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/btnMotorVehicleFineInquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motor Vehicle Fine Inquiry"
                android:layout_marginTop="15dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Alt Navigasyon Bar -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_bottom_nav" />
</LinearLayout>

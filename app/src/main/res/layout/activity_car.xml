<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_dashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false"
            app:contentScrim="@android:color/transparent"
            app:statusBarScrim="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:minHeight="44dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/tvCarName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Volvo XC40"
                            android:textAppearance="?attr/textAppearanceHeadline5"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal" />
                        <TextView
                            android:id="@+id/tvCarYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Parked"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back,"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="normal"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvWelcomeUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Car Owner Name"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCarImageContainer"
                    style="?attr/materialCardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imgCarLogo"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:contentDescription="Car Logo"
                            android:src="@drawable/car_icon"
                            android:scaleType="fitCenter"
                            android:layout_marginBottom="12dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCarDetails"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="See Car Details"
                            android:textStyle="normal"
                            android:textColor="?attr/colorOnSurface"
                            app:icon="@drawable/ic_arrow_forward"
                            app:iconTint="?attr/colorOnSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:title="" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Real-Time Engine Data"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Speed (Tıklanabilir değil) -->
                <com.google.android.material.card.MaterialCardView
                    style="?attr/materialCardViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="Speed Icon"
                            android:src="@drawable/ic_speed"
                            app:tint="@color/grey_dark"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:id="@+id/tvSpeedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="68"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="km/h"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- RPM (Tıklanabilir) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMetricRpm"
                    style="?attr/materialCardViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="RPM Icon"
                            android:src="@drawable/ic_rpm"
                            app:tint="@color/grey_dark"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:id="@+id/tvRpmValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="771"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RPM"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Engine Temperature (Tıklanabilir) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMetricEngineTemp"
                    style="?attr/materialCardViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="Temperature Icon"
                            android:src="@drawable/ic_temperature"
                            app:tint="@color/grey_dark"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:id="@+id/tvEngineTempValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="64°C"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Engine Temp"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Engine Performance Card -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Engine Icon"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/grey_dark" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Engine Performance"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Engine Load Metric Grubu (Tıklanabilir) -->
                        <LinearLayout
                            android:id="@+id/layoutMetricEngineLoad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingVertical="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">
                            <TextView
                                android:id="@+id/tvEngineLoadValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="22%"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Engine Load"
                                android:gravity="center"
                                android:textAppearance="?attr/textAppearanceLabelMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <!-- Intake Air Temp Metric Grubu (Tıklanabilir) -->
                        <LinearLayout
                            android:id="@+id/layoutMetricIntakeAirTemp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingVertical="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">
                            <TextView
                                android:id="@+id/tvIntakeAirTempValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="28°C"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intake Air"
                                android:gravity="center"
                                android:textAppearance="?attr/textAppearanceLabelMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <!-- MAF Metric Grubu (Tıklanabilir) -->
                        <LinearLayout
                            android:id="@+id/layoutMetricMaf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingVertical="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">
                            <TextView
                                android:id="@+id/tvMafValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="5,6 g/s"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Air Flow (MAF)"
                                android:gravity="center"
                                android:textAppearance="?attr/textAppearanceLabelMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Fuel Status Card (Tıklanabilir DEĞİL) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMetricFuelLevel"
                style="?attr/materialCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <!-- Bu kart için clickable, focusable, foreground yok -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Fuel Icon"
                            android:src="@drawable/ic_fuel"
                            app:tint="@color/grey_dark" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Fuel System"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fuel Level"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal"/>
                            <TextView
                                android:id="@+id/tvFuelValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                tools:text="68%"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="(May not be available on all vehicles)"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="normal"
                                android:alpha="0.7"/>
                        </LinearLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRefuel"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FIND GAS"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"
                            app:strokeColor="@color/icon_outline_color"
                            app:icon="@drawable/ic_fuel"
                            app:iconTint="@color/grey_dark"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.SmallComponent"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Diagnostic Trouble Codes Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDtcStatus"
                style="?attr/materialCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:id="@+id/imgDtcIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Fault Status Icon"
                            android:src="@drawable/ic_warning"
                            app:tint="?attr/colorError" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Fault Status"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="normal"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvDtcStatusMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Checking fault codes..."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="normal"
                        android:gravity="center_horizontal" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShowDtcDetails"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="Show Details"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="normal"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvProtocolLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/obd2_protocol_label"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />
            <Spinner
                android:id="@+id/spinnerProtocol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Quick Services -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="Quick Services"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenSite"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:layout_marginBottom="8dp"
                    android:text="SCHEDULE MAINTENANCE"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="normal"
                    app:icon="@drawable/ic_calendar"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    app:strokeColor="@color/button_outline_stroke_color"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.SmallComponent" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTrafficFineInquiry"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:layout_marginBottom="8dp"
                    android:text="TRAFFIC FINE INQUIRY"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="normal"
                    app:icon="@drawable/ic_fine"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    app:strokeColor="@color/button_outline_stroke_color"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.SmallComponent" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMotorVehicleFineInquiry"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:text="MOTOR VEHICLE FINE INQUIRY"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="normal"
                    app:icon="@drawable/ic_car_fine"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    app:strokeColor="@color/button_outline_stroke_color"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.SmallComponent" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabConnectOBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="OBD2 Connection"
        android:src="@android:drawable/ic_menu_add"
        app:backgroundTint="?attr/colorPrimary"
        app:tint="@color/on_primary" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/surface"
        app:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_item_color_grey"
        app:itemTextColor="@color/bottom_nav_item_color_grey"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
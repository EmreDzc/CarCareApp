<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nötr bir arka plan rengi -->
    <solid android:color="?attr/colorSurfaceContainer" /> <!-- Material 3 uyumlu bir yüzey rengi -->

    <!-- Çerçeve ekleyerek daha belirgin hale getirebilirsin (opsiyonel) -->
    <stroke android:width="1dp" android:color="?attr/colorOutlineVariant" />

    <!-- Köşeleri yuvarlat. Sol alt köşeyi daha az yuvarlatarak "balon" hissi verebilirsin. -->
    <corners
        android:radius="16dp"
        android:bottomLeftRadius="4dp"/>

</shape>
<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Arka plan rengi.
         Bu rengi colors.xml dosyasından alıyoruz ki
         açık/koyu tema ile uyumlu çalışsın. -->
    <solid android:color="@color/gray" />

    <!-- Köşeleri yuvarlatma. 12dp modern bir görünüm için idealdir. -->
    <corners android:radius="12dp" />

    <!-- Kenarlık (isteğe bağlı ama şık durur).
         Bu da tema ile uyumlu bir renktir. -->
    <stroke
        android:width="1dp"
        android:color="@color/grey_dark" />

</shape>
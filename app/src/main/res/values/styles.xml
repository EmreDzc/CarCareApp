<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/purple_secondary</item>
        <item name="colorSecondaryVariant">@color/purple_accent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_primary_dark</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/purple_50</item>

        <!-- Material Card View style -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- Checkbox style -->
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
    </style>

    <!-- Custom CardView style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <!-- Custom CheckBox style -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/purple_primary</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- NoActionBar theme for activities that use custom toolbar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
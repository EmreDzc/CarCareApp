<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:app="http://schemas.android.com/apk/res-auto">
    <font
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/montserrat" />  <!-- res/font/montserrat_regular.ttf dosyanızın adı -->
    <font
        app:fontStyle="italic"
        app:fontWeight="400"
        app:font="@font/montserrat_italic" />    <!-- res/font/montserrat_italic.ttf dosyanızın adı -->
    <font
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/montserrat_bold" />      <!-- Eğer bold kullanacaksanız -->
    <font
        app:fontStyle="italic"
        app:fontWeight="700"
        app:font="@font/montserrat_bold_italic" /> <!-- Eğer bold italic kullanacaksanız -->
</font-family>